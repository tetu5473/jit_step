<div class="container-fluid mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <p class="text-center"><%= t('devise.sessions.new.activation_message') %></p>
      <h2 class="mb-3 text-center"><%= t('devise.sessions.new.sign_in') %></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, t('devise.sessions.new.email'), class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, t('devise.sessions.new.password'), class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="mb-3 form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: 'form-check-label' %>
          </div>
        <% end %>
          <div class="form-group text-center"> 
            <%= f.submit t('devise.sessions.new.sign_in'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      <%= render "devise/shared/links", only: [:sign_up, :confirmation] %>
    </div>
  </div>
</div>
