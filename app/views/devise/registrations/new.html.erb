<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, autofocus: true, class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, autocomplete: "email", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, "Password" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, "Password confirmation" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
