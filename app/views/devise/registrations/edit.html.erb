<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <h2 class="text-center"><%= t('devise.registrations.edit.title', resource: resource_name.to_s.humanize) %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true, method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', required: true, style: "width: 100%;" %>
        </div>
        
        <div class="form-group mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= t('devise.registrations.edit.password') %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', style: "width: 100%;" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= t('devise.registrations.new.password_minimum', count: @minimum_password_length) %></small>
          <% end %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, t('devise.registrations.edit.password_confirmation') %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= t('devise.registrations.edit.current_password') %><br>
          <%= t('devise.registrations.edit.current_password_2') %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', style: "width: 100%;" %>
        </div>

        <div class="text-center">
          <%= f.submit t('devise.registrations.edit.update'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <p class="text-center"><%= t('devise.registrations.edit.unhappy') %></p>
        <%= button_to t('devise.registrations.edit.cancel_my_account'), registration_path(resource_name), data: { confirm: t('devise.registrations.edit.confirm_cancel'), turbo_confirm: t('devise.registrations.edit.confirm_cancel') }, method: :delete, class: 'btn btn-danger' %>
      </div>

      <div class="mt-3">
        <%= link_to t('devise.registrations.edit.back'), :back %>
      </div>
    </div>
  </div>
</div>