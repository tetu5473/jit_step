<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true, method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', required: true, style: "width: 100%;" %>
        </div>
        
        <div class="form-group mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, "Password (leave blank if you don't want to change it)" %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', style: "width: 100%;" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
          <% end %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :current_password, "Current password (we need your current password to confirm your changes)" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', style: "width: 100%;" %>
        </div>

        <div class="text-center">
          <%= f.submit "Update", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <h3>Cancel my account</h3>
        <p>Unhappy? You can cancel your account.</p>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
      </div>

      <div class="text-center mt-3">
        <%= link_to "Back", :back, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
