<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4"><%= t('devise.passwords.edit.change_my_password') %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'needs-validation', novalidate: true, method: :put }) do |f| %>
        
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.hidden_field :reset_password_token %>

        <div class="form-group mb-3">
          <%= t('devise.passwords.edit.new_password') %><br>
          <%= t('devise.shared.minimum_password_length', count: 6) %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, t('devise.passwords.edit.confirm_new_password') %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="actions text-center">
          <%= f.submit t('devise.passwords.edit.change_my_password'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>