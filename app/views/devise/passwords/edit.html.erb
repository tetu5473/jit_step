<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-3 text-center"><%= t('devise.passwords.edit.title') %></h2>

      <%= form_for(resource, as: resource_name, url: edit_password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :password, t('devise.passwords.edit.password'), class: 'form-label' %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
          <small>(<%= t('devise.passwords.edit.password_min_length') %>)</small>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, t('devise.passwords.edit.password_confirmation'), class: 'form-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="text-center">
          <%= f.submit t('devise.passwords.edit.change_password_button'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="text-left mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
