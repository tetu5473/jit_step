<!-- app/views/devise/passwords/edit.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Change your password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'needs-validation', novalidate: true, method: :put }) do |f| %>
        
        <%# エラーメッセージがある場合にメッセージを表示 %>
        <% if resource.errors.any? %>
          <div style="color: black; margin-bottom: 20px;">
            <h2 class="text-center mb-2">1 error prohibited this user from being saved:</h2>
            <%# カスタムメッセージ表示 %>
            <p>Password can't be blank</p>
          </div>
        <% end %>

        <%= f.hidden_field :reset_password_token %>

        <div class="form-group mb-3">
          <%= f.label :password, "New password (6 characters minimum)" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true, style: "width: 100%;" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Change my password", class: 'btn btn-primary' %>
        </div>
      <% end %>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
