<h1 class="text-center">記事の新規作成</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @article, url: users_articles_path, local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.label :title, "タイトル" %>
          <%= form.text_field :title, class: "form-control w-100" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :content, "内容" %>
          <%= form.text_area :content, class: "form-control w-100" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :image, "画像" %>
          <%= form.file_field :image, class: "w-100" %>
        </div>

        <div class="text-center mb-3">
          <%= form.submit "新規作成", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text mt-3">
        <%= link_to '戻る', users_articles_pathclass: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
