<h1>記事の編集</h1>

<%= form_with(model: [:users, @article], local: true, html: { multipart: true }) do |form| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prevented this article from being saved:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: 'form-control', value: @article.title %>
  </div>

  <div class="form-group">
    <%= form.label :body, "内容" %>
    <%= form.text_area :body, class: 'form-control', value: @article.body %>
  </div>

  <div class="form-group">
    <%= form.label :image, "画像" %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit '更新する', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to '戻る', users_articles_path, class: 'btn btn-secondary' %>
